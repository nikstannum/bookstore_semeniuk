<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="ERROR" monitorInterval="3600">
    <Properties>
        <property name="pattern_file">
            %d{dd-MM-yyyy HH:mm:ss} [%t] %-5level %logger{3} - %msg%n
        </property>
        <property name="pattern_console">
            %r [%t] %5level %logger{1} - %msg%n
        </property>
    </Properties>
    <Appenders>
        <RollingFile name="TxtFile" fileName="logs/log.txt" filePattern="logs/${date:dd-MM-yyyy}/%d{mm-HH}_%i.txt"
                     append="true" bufferedIO="true" bufferSize="1024">
            <PatternLayout pattern="${pattern_file}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10 KB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
            <Filters>
                <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
                <!--<LevelRangeFilter minLevel="FATAL" maxLevel="INFO" onMatch="ACCEPT" onMismatch="DENY"/>-->
            </Filters>
        </RollingFile>
        <Console name="Console" target="SYSTEM.OUT">
            <PatternLayout pattern="${pattern_console}"/>
            <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
            <!--<LevelRangeFilter minLevel="FATAL" maxLevel="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>-->
        </Console>
    </Appenders>
    <Loggers>
        <Root level="ALL">
            <AppenderRef ref="TxtFile"/>
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>


